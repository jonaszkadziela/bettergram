{
  "name": "bettergram",
  "description": "BetterGram is a simple yet powerful web application to share your photos with others.",
  "author": "Jonasz KÄ…dziela",
  "version": "1.0.0",
  "private": true,
  "main": "index.php",
  "scripts": {
    "assets-versioning-prod": "php dev_tools/assets_versioning.php",
    "build": "npm-run-all --parallel build-dev build-prod",
    "build-dev": "npm-run-all compile-dev",
    "build-prod": "npm-run-all compile-prod assets-versioning-prod",
    "clear": "npm-run-all --parallel clear-css clear-js",
    "clear-css": "npm-run-all --parallel clear-css-*",
    "clear-css-dev": "shx rm -rf app/assets/stylesheets/compiled/*",
    "clear-css-prod": "shx rm -rf app/assets/stylesheets/dist/*",
    "clear-dev": "npm-run-all --parallel clear-css-dev clear-js-dev",
    "clear-js": "npm-run-all --parallel clear-js-*",
    "clear-js-dev": "shx rm -rf app/assets/javascripts/compiled/*",
    "clear-js-prod": "shx rm -rf app/assets/javascripts/dist/*",
    "clear-prod": "npm-run-all --parallel clear-css-prod clear-js-prod",
    "compile-dev": "webpack --mode development --config webpack.config.js",
    "compile-prod": "webpack --mode production --config webpack.config.js",
    "modernizr": "modernizr --config modernizr.config.js --dest app/assets/javascripts/src/modernizr.js",
    "update": "ncu -u && npm update && shx echo Update completed! Remember to run 'npm install'.",
    "watch": "webpack --watch --mode development"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "IE 11"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@babel/runtime": "^7.5.5",
    "bootstrap": "^4.3.1",
    "ganalytics": "^3.1.2",
    "jquery": "^3.4.1",
    "lg-fullscreen": "^1.1.0",
    "lg-zoom": "^1.1.0",
    "lightgallery": "^1.6.12",
    "modernizr": "^3.7.1",
    "popper.js": "^1.15.0",
    "recaptcha-v3": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@fortawesome/fontawesome-free": "^5.10.2",
    "autoprefixer": "^9.6.1",
    "babel-loader": "^8.0.6",
    "babel-preset-minify": "^0.5.1",
    "css-loader": "^3.2.0",
    "extract-loader": "^3.1.0",
    "file-loader": "^4.2.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-cli": "^6.1.3",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^7.3.1",
    "shx": "^0.3.2",
    "webpack": "^4.39.2",
    "webpack-clean-obsolete-chunks": "^0.4.0",
    "webpack-cli": "^3.3.7",
    "webpack-merge": "^4.2.1"
  }
}
